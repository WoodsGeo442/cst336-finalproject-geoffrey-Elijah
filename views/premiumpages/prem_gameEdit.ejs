		<h1 align='center'> Video Game Database Search </h1>
        <nav align='center'>
            <ul>
                <li> <a href = "/welcome" id = "currentPage"> Home </a> </li>
                <li> <a href = "/searchGames"> Search Games </a> </li>
                <li> <a href = "/searchdevelopers"> Search Game Developers </a> </li>
                <li> <a href = "/wishlist"> WishList </a> </li>
            </ul>
        </nav>
        <br><hr><br>
        
        <br><hr><br>
        <h3>Edit A Game</h3>
        <form action='/premGame/<%=games.title%>?_method=PUT' method='POST'>
            <div class='form-group row'>
                <label for='title' class='col-sm-4 col-form-label'>Title: </label>
			    <div class='col-sm-4'>
				    <input type='text' class='form-control' id='title' name='title' value='<%=games.title%>' required>
				</div>
			</div>
			<div class='form-group row'>
			    <label for='genre' class='col-sm-4 col-form-label'>Genre: </label>
			    <div class='col-sm-4'>
				    <input type='text' class='form-control' id='genre' name='genre' value='<%=games.genre%>' required>
			    </div>
		    </div>
		    <div class='form-group row'>
			    <label for='rating' class='col-sm-4 col-form-label'>Rating: </label>
			    <div class='col-sm-4'>
				    <input type='text' class='form-control' id='rating' name='rating' value='<%=games.rating%>' required>
			    </div>
		    </div>
		    <div class='form-group row'>
			    <label for='pricing' class='col-sm-4 col-form-label'>Pricing: </label>
			    <div class='col-sm-4'>
				    <input type='text' class='form-control' id='pricing' name='pricing' value='<%=games.pricing%>' required>
			    </div>
		    </div>
		    <div class='form-group row'>
			    <label for='companyName' class='col-sm-4 col-form-label'>Company Name: </label>
			    <div class='col-sm-4'>
				    <input type='text' class='form-control' id='companyName' name='companyName' value='<%=games.companyName%>'>
			    </div>
		    </div>
            <div class='form-group row'>
			    <div class='col-sm-4'>
			        <a class='btn btn-danger btn-block' href='/game/<%=games.title%>'>Cancel</a>
			    </div>
			    <div class='col-sm-4'>
				    <button class='btn btn-primary btn-block'>Update Game</button>
			    </div>
			    <div class='col-sm-4'></div>
		    </div>
        </form>
	</div>
